= Date.today.strftime("%d/%m %Y")
%h4
  #{@seller.full_name}, #{@seller.org.title}
%hr

.row
  .col-md-3
    %ul.list-group.dashboard-stats-list
      %li.list-group-item
        %span.badge= current_seller.offers.select{ |o| o.status == 'pending' }.count
        Väntande offerter
      %li.list-group-item
        %span.badge= current_seller.offers.select{ |o| o.status == 'accepted' }.count
        Godkända offerter
      %li.list-group-item
        %span.badge= current_seller.contacts.count
        Kontakter
