.row
  .col-md-3.left-panel.panel.panel-default
    .form-group
      .input-group
        .input-group-addon
          %i.fa.fa-search
        %input{ type: 'search', name: 'filter', placeholder: 'SÃ¶k..', class: 'form-control' }

  .col-md-8.right-panel
    %table.table.table-hover.table-clickable
      %thead
        %tr
          %th Org
          %th Namn
          %th Telefon
          %th Email
      %tbody
        - @contacts.each do |contact|
          %tr{ data: { link: "#{contact_path(contact.id)}" } }
