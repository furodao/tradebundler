- model_class = Buyer
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:phone)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:org_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @buyers.each do |buyer|
      %tr
        %td= link_to buyer.id, buyer_path(buyer)
        %td= buyer.first_name
        %td= buyer.last_name
        %td= buyer.phone
        %td= buyer.email
        %td= buyer.org_id
        %td=l buyer.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_buyer_path(buyer), :class => 'btn btn-primary btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), buyer_path(buyer), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger btn-xs'

= link_to t('.new', :default => t("helpers.links.new")), new_buyer_path, :class => 'btn btn-primary'
