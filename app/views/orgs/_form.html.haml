= form_for @org do |f|
  - if @org.errors.any?
    #error_explanation
      %h2= "#{pluralize(@org.errors.count, "error")} prohibited this org from being saved:"
      %ul
        - @org.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :org_num
    = f.number_field :org_num
  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'
