= form_for @spec do |f|
  - if @spec.errors.any?
    #error_explanation
      %h2= "#{pluralize(@spec.errors.count, "error")} prohibited this spec from being saved:"
      %ul
        - @spec.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :buyer_id
    = f.number_field :buyer_id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
