.row
  .col-md-3.left-panel.panel.panel-default
    - if current_user_type == :buyer
      %div.control-box
        = link_to new_spec_path, class: 'btn btn-xs btn-default' do
          %i.fa.fa-pencil
          Ny specifikation

    .form-group
      .input-group
        .input-group-addon
          %i.fa.fa-search
        %input{ type: 'search', name: 'filter', placeholder: 'SÃ¶k..', class: 'form-control' }

  .col-md-8.right-panel
    %table.table.table-hover.table-clickable
      %thead
        %tr
          %th Org
          %th Rubrik
          %th Skapad
          %th 
            - if current_user_type == :buyer
              Offerter
      %tbody
        - @specs.each do |spec|
          - if current_user_type == :seller
            = render partial: 'spec_item_seller', locals: { spec: spec, offer: (current_seller.offers.where(spec_id: spec.id).first || nil) }
          - else
            = render partial: 'spec_item_buyer', locals: { spec: spec }

= render partial: 'shared/table_js'
