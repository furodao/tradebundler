- model_class = Offer
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:seller_id) + ':'
  %br
  = @offer.seller_id
%p
  %strong= model_class.human_attribute_name(:spec_id) + ':'
  %br
  = @offer.spec_id
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @offer.description
%p
  %strong= model_class.human_attribute_name(:budget) + ':'
  %br
  = @offer.budget
%p
  %strong= model_class.human_attribute_name(:delivery_date) + ':'
  %br
  = @offer.delivery_date

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), offers_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_offer_path(@offer), :class => 'btn btn-primary'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), offer_path(@offer), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
