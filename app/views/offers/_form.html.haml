= form_for @offer do |f|
  - if @offer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@offer.errors.count, "error")} prohibited this offer from being saved:"
      %ul
        - @offer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :seller_id
    = f.number_field :seller_id
  .field
    = f.label :spec_id
    = f.number_field :spec_id
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :budget
    = f.text_field :budget
  .field
    = f.label :delivery_date
    = f.date_select :delivery_date
  .actions
    = f.submit 'Save'
