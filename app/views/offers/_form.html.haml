= form_for @offer do |f|
  .form-group
    = f.label :description, :class => 'control-label'
    = f.text_area :description, :class => 'form-control'
  .form-group
    = f.label :budget, :class => 'control-label'
    = f.text_field :budget, :class => 'form-control'
  .form-group
    = f.label :delivery_date, :class => 'control-label'
    = f.date_select :delivery_date, :class => 'form-control'
  .form-group
    = f.hidden_field :spec_id, { value: @spec.id }
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), offers_path, :class => 'btn'
